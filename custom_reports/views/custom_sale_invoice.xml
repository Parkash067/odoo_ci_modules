                                  <!--<span t-if="account_invoice.supplier_id.c_street">-->
                                      <!--<span t-field="account_invoice.supplier_id.c_street"/><br/>-->
                                  <!--</span>-->
                                  <!--<span t-if="account_invoice.supplier_id.c_street2">-->
                                      <!--<span t-field="account_invoice.supplier_id.c_street2"/><br/>-->
                                  <!--</span>-->
                                  <!--<span t-if="account_invoice.supplier_id.city">-->
                                      <!--<span t-field="account_invoice.supplier_id.city"/><br/>-->
                                  <!--</span>-->
                                  <!--<span t-if="account_invoice.supplier_id.phone">-->
                                      <!--<strong>Telephone No. </strong> <span t-field="account_invoice.supplier_id.phone"/><br/>-->
                                  <!--</span>-->
                                  <!--<span t-if="account_invoice.supplier_id.ntn_num">-->
                                      <!--<strong>NTN No. </strong> <span t-field="account_invoice.supplier_id.ntn_num"/>-->
                                  <!--</span>-->
                              <!--</div>-->
                              <div style="font-size:18px; padding:10px;width:100%;display: inline-block;float:left">
                                  <strong style="font-size:18px">Buyer's Name: </strong>
                                  <span t-field="account_invoice.partner_id.name"/><br/>
                                  <strong style="font-size:18px; margin-top:5px;">Address: </strong>
                                  <span t-if="account_invoice.partner_id.street">
                                      <span t-field="account_invoice.partner_id.street"/>
                                  </span>
                                  <span t-if="account_invoice.partner_id.street2">
                                      ,<span t-field="account_invoice.partner_id.street2"/>
                                  </span>
                                  <span t-if="account_invoice.partner_id.city">
                                      <span t-field="account_invoice.partner_id.city"/>.<br/>
                                  </span>
                                  <span t-if="account_invoice.partner_id.phone">
                                      <strong style="margin-top:5px;">Telephone No.: </strong> <span t-field="account_invoice.partner_id.phone"/><br/>
                                  </span>
                                  <span>
                                      <strong style="margin-top:5px;">Sales Tax No.<sub>(IF ANY)</sub>:</strong>
                                  </span>
                                  <!--<span t-if="account_invoice.partner_id.ntn_num">-->
                                      <!--<strong>NTN No. </strong> <span t-field="account_invoice.partner_id.ntn_num"/>-->
                                  <!--</span>-->
                              </div>
                              <br/><br/><br/><br/><br/><br/><br/><br/>
                              <!--<strong>Terms of Sale: </strong>-->

                              <div style="font-size:16px; border:2px solid grey; padding:12px;border-radius:10px;width:1000px;">
                              <table class="table table-condensed" style="font-size:16px">
                                  <thead border="1">
                                      <tr>
                                          <td>Qty.</td>
                                          <td>Description</td>
                                          <td class="text-right">Unit Price</td>
                                          <td class="text-right">Total Exclu. Taxes</td>
                                          <t t-foreach="account_invoice.invoice_line" t-as="l">
                                             <t t-foreach="l.invoice_line_tax_id" t-as="taxes">
                                              <td class="text-right" >
                                                  <span t-esc="taxes.name" />
                                              </td>
                                             </t>
                                          </t>
                                          <!--<td class="text-right">Sales Tax 17%</td>-->
                                          <!--<td class="text-right">Further TAX 2%</td>-->
                                          <!--<td class="text-right">WHT</td>-->
                                          <!--<th class="text-right">Rate of Sales Tax</th>-->
                                          <!--<th class="text-right">Amount of Sales Tax</th>-->
                                          <!--&lt;!&ndash;<td>Further Tax on Un-registered Person</td>&ndash;&gt;-->
                                          <td class="text-right">Total Inclu. Taxes</td>
                                      </tr>
                                  </thead>
                                  <tbody class="invoice_tbody">
                                      <tr t-foreach="account_invoice.invoice_line" t-as="l">
                                          <td>
                                              <span t-esc="round(l.quantity)"/>
                                          </td>
                                          <td>
                                              <span t-esc="l.product_id.name"/><br/><span t-esc="l.product_id.description"/>
                                          </td>
                                          <td class="text-right" >
                                              <span t-field="l.price_unit" />
                                          </td>
                                          <td class="text-right" >
                                              <span t-field="l.price_subtotal" />
                                          </td>
                                          <t t-foreach="l.invoice_line_tax_id" t-as="taxes">
                                              <td class="text-right" >
                                                  <span t-esc="taxes.amount*l.price_unit" />
                                                  <t t-set="total_tax" t-value="total_tax+(taxes.amount*l.price_unit)"/>
                                              </td>
                                          </t>
                                          <!--<td class="text-right" >
                                             <span t-field="l.price_subtotal"/>
                                          </td>-->
                                          <td class="text-right" >
                                             <span t-esc="l.price_subtotal+total_tax"/>
                                          </td>
                                      </tr>
                                  </tbody>
                              </table>
                          </div><br/><br/>
                          <div class="row"><br/>
                              <div class="col-xs-4 pull-right">
                                  <table class="table table-condensed" style="font-size:16px">
                                          <t>
                                              <tr>
                                                  <td>
                                                      <strong>TOTAL</strong>
                                                  </td>
                                                  <!--<td class="text-right">
                                                      <strong><span t-esc="account_invoice.amount_untaxed"/></strong>
                                                  </td>-->
                                                  <td class="text-right">
                                                      <strong><span t-esc="account_invoice.amount_total"/></strong>
                                                  </td>
                                              </tr>
                                          </t>
                                  </table>
                              </div>
                          </div>
                              <div class="row"><br/>
                              <div class="col-xs-4 pull-left">
                                  <table class="table table-condensed" style="font-size:16px">
                                      <tr>
                                          <td>
                                              <strong>Exclu. Net Tax Value</strong>
                                          </td>
                                          <td class="text-right">
                                              <strong><span t-esc="round(account_invoice.amount_untaxed)"/></strong>
                                          </td>
                                      </tr>
                                      <t t-foreach="account_invoice.tax_line" t-as="l">
                                          <tr>
                                              <td><strong><span t-esc="l.name"/></strong></td>
                                              <td class="text-right"><strong><span t-esc="l.amount"/></strong></td>
                                          </tr>
                                      </t>
